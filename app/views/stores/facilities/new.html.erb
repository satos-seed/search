<div class="body">
	<div class="container">
		<p class="notice">
			<%= notice %>
		</p>

		<% if @facility.errors.any? %>
		  <div id="error_explanation" class="alert alert-danger">
		    <ul>
		      <% @facility.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>
		<div class="row">
			<h1>台の新規登録</h1>
			<%= form_for(@facility, {:url => stores_facilities_path}) do |f| %>
				<label>
					<%= f.select :table_status, Facility.table_statuses.keys, {}, {class: 'hoge'} %>
				</label>

				<label>
					<%= f.label :台番号 %>
					<%= f.text_field :table_count %>
				</label>

				<label>
					<%= f.label :機種選択 %>
					<%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
				</label>

				<label>
					<%= f.select :progress, Facility.progresses.keys.to_a, {} %>
				</label>

				<label>
					<%= link_to "機種追加", stores_genres_path %>
				</label>

				<%= f.submit "登録" %>
			<% end %>
		</div>
	</div>
</div>
