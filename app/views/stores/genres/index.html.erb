<div class="body">
	<div class="container">
		<p class="notice">
			<%= notice %>
		</p>
		<div class="row">
			<h1>機種作成＆一覧</h1>

			<h2>新規機種作成</h2>
			<%= form_for(@genre, {:url => stores_genres_path}) do |f| %>
				<h4>機種名</h4>
				<%= f.text_field :genre_name %>
				<%= f.submit '追加' %>
			<% end %>
			<h2>機種一覧</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>機種名</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.genre_name %></td>
						<td><%= link_to "編集", edit_stores_genre_path(genre.id) %></td>
						<td><!--%= link_to "削除" stores_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %--></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
